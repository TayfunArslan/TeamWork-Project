@model TeamWork.UI.Models.ProjectListModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Projeler
        <small>Sistemdeki bütün projeleri bu sayfa üzerinden yönetebilirsiniz.</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-lg-12 col-xs-12">
            <div class="box">
                <div class="box-header">
                    <div style="float:left; width:150px;">
                        <a href=@Url.Action("Index", "Project") class="btn btn-block btn-primary btn-flat">Listeyi Yenile</a>
                    </div>
                    <div style="float:left; width:150px; margin-left:5px;">
                        <a href=@Url.Action("AddEdit", "Project") class="btn btn-block btn-success btn-flat">Yeni Ekle</a>
                    </div>
                </div>

                <div class="box-body">
                    <table id="grdList" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Id</th>
                                <th>Proje Adı</th>
                                <th>Açıklama</th>
                                <th>Aktif Mi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in Model.Projects)
                            {
                                <tr>
                                    <td><a href=@Url.Action("AddEdit", "Project", new { id = project.Id } )>Güncelle</a></td>
                                    <td>@project.Id</td>
                                    <td>@project.Name</td>
                                    <td>@project.Description</td>
                                    <td>@project.IsActive</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th>Id</th>
                                <th>Proje Adı</th>
                                <th>Açıklama</th>
                                <th>Aktif Mi</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        $('#grdList').DataTable({
            'paging': true,
            'lengthChange': true,
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })
</script>