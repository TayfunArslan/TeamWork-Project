
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        500 Error Page
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">500 error</li>
    </ol>
</section>

<section class="content">
    <div class="error-page">
        <h2 class="headline text-red">500</h2>
        <div class="error-content">
            <h3><i class="fa fa-warning text-red"></i> Oops! Bir şeyler ters gitti.</h3>
            <p>
                En kısa sürede sorunu düzelteceğiz ancak yazılım ekibine yardımcı olmak
                adına aşağıdaki hata detayı paylaşabilirsin
            </p>
            <p>
                <h3>Hata Detayı: </h3>
                @Session["Error"]
            </p>
        </div>
    </div>
</section>